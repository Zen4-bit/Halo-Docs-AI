# ===========================================
# HALO Docs AI - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ============ AI Configuration ============
# Required for AI features (chat, summarization, etc.)
VERTEX_AI_API_KEY=your_vertex_ai_api_key_here
VERTEX_AI_ENDPOINT=https://aiplatform.googleapis.com/v1/publishers/google/models
VERTEX_AI_GEMINI_MODEL=gemini-2.0-flash-exp
VERTEX_AI_IMAGEN_MODEL=imagen-3.0-generate-001
VERTEX_AI_VIDEO_MODEL=veo-3.1-generate-preview

# ============ Database ============
# PostgreSQL (optional - defaults to SQLite for development)
# DATABASE_URL=postgresql://halo:halo@localhost:5432/halodocs
# POSTGRES_USER=halo
# POSTGRES_PASSWORD=halo
# POSTGRES_DB=halodocs

# ============ Redis & Celery ============
# Required for background task processing
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============ Frontend ============
NEXT_PUBLIC_API_BASE=http://localhost:8080/api/v1
# NODE_ENV=development

# ============ Backend ============
# PYTHON_ENV=development
# API_PORT=8080
# CORS_ORIGINS=http://localhost:3000

# ============ Storage ============
# USE_LOCAL_STORAGE=true
# LOCAL_STORAGE_PATH=./uploads

# ============ Email (Optional) ============
# RESEND_API_KEY=your_resend_api_key

# ============ Monitoring (Optional) ============
# SENTRY_DSN=your_sentry_dsn
